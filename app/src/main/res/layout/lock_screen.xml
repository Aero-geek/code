<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="44.0dip"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/Button01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_2"
            android:background="@drawable/selected_tab"
            android:text="@string/cancel"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0.0dip"
            android:layout_height="37.0dip"
            android:layout_weight="0.9"
            android:gravity="center"
            android:text="Pin Lock"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/newAppColor"
            android:textStyle="bold" />

        <Button
            android:id="@+id/Button02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_2"
            android:background="@drawable/selected_tab"
            android:text="@string/save"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="fill_parent"
            android:layout_height="93.0dip"
            android:gravity="center"
            android:shadowColor="#000000"
            android:shadowDx="1.0"
            android:shadowDy="1.0"
            android:shadowRadius="1.5"
            android:text="Enter A Passcode"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/newAppColor" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.13"
                android:text=""
                android:textAppearance="?android:textAppearanceMedium" />

            <EditText
                android:id="@+id/EditText01"
                android:layout_width="46.0dip"
                android:layout_height="wrap_content"
                android:background="@drawable/non_selected_tab"
                android:clickable="false"
                android:cursorVisible="false"
                android:ems="10"
                android:fadeScrollbars="true"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:fontFamily="@font/nexa_regular"
                android:gravity="center"
                android:inputType="text"
                android:maxLength="1"
                android:textSize="24.0sp" />

            <TextView
                android:id="@+id/TextView02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text=""
                android:textAppearance="?android:textAppearanceMedium" />

            <EditText
                android:id="@+id/EditText02"
                android:layout_width="46.0dip"
                android:layout_height="wrap_content"
                android:background="@drawable/non_selected_tab"
                android:clickable="false"
                android:cursorVisible="false"
                android:ems="10"
                android:fadeScrollbars="true"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:fontFamily="@font/nexa_regular"
                android:gravity="center"
                android:inputType="text"
                android:maxLength="1"
                android:textSize="24.0sp" />

            <TextView
                android:id="@+id/TextView03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text=""
                android:textAppearance="?android:textAppearanceMedium" />

            <EditText
                android:id="@+id/EditText03"
                android:layout_width="46.0dip"
                android:layout_height="wrap_content"
                android:background="@drawable/non_selected_tab"
                android:clickable="false"
                android:cursorVisible="false"
                android:ems="10"
                android:fadeScrollbars="true"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:fontFamily="@font/nexa_regular"
                android:gravity="center"
                android:inputType="text"
                android:maxLength="1"
                android:textSize="24.0sp" />

            <TextView
                android:id="@+id/TextView04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text=""
                android:textAppearance="?android:textAppearanceMedium" />

            <EditText
                android:id="@+id/EditText04"
                android:layout_width="46.0dip"
                android:layout_height="wrap_content"
                android:background="@drawable/non_selected_tab"
                android:clickable="false"
                android:cursorVisible="false"
                android:ems="10"
                android:fadeScrollbars="true"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:fontFamily="@font/nexa_regular"
                android:gravity="center"
                android:inputType="text"
                android:maxLength="1"
                android:textSize="24.0sp" />

            <TextView
                android:id="@+id/TextView05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.13"
                android:text=""
                android:textAppearance="?android:textAppearanceMedium" />
        </LinearLayout>

        <TextView
            android:id="@+id/TextView07"
            android:layout_width="wrap_content"
            android:layout_height="0.0dip"
            android:layout_weight="0.13"
            android:text=""
            android:textAppearance="?android:textAppearanceMedium" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/TextView08"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.15"
                android:text=""
                android:textAppearance="?android:textAppearanceMedium" />

            <Button
                android:id="@+id/Button03"
                android:layout_width="121.0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/selected_tab"
                android:gravity="center"
                android:text="Forgot Password"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/TextView06"
                android:layout_width="28.0dip"
                android:layout_height="wrap_content"
                android:text=""
                android:textAppearance="?android:textAppearanceMedium" />
        </LinearLayout>

        <EditText
            android:id="@+id/EditText05"
            android:layout_width="fill_parent"
            android:layout_height="63.0dip"
            android:clickable="true"
            android:cursorVisible="false"
            android:ems="10"
            android:fadeScrollbars="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:fontFamily="@font/nexa_regular"
            android:gravity="center"
            android:hint="Click here if keyboard does not show"
            android:inputType="number"
            android:maxLength="4"
            android:textColor="@color/black"
            android:textSize="12.0sp">

            <requestFocus />
        </EditText>
    </LinearLayout>
</LinearLayout>