<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_5"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/payment_option_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selected_tab"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/payment_option_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_weight="1"
            android:paddingLeft="@dimen/margin_5"
            android:paddingTop="@dimen/margin_10"
            android:paddingRight="@dimen/margin_5"
            android:text="@string/payment_options"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/payment_option"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_weight="1.5"
            android:gravity="right"
            android:paddingLeft="@dimen/margin_5"
            android:paddingRight="@dimen/margin_5"
            android:text=""
            android:textColor="@color/white"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/bank_details_edit_img"
            android:layout_width="@dimen/margin_30"
            android:layout_height="@dimen/margin_30"
            android:layout_gravity="center_vertical"
            android:paddingRight="@dimen/margin_10"
            android:src="@drawable/ic_edit_option"
            app:tint="@color/white" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="@color/white" />

    <LinearLayout
        android:id="@+id/signed_Lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5"
        android:background="@drawable/selected_tab"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_5"
        android:paddingTop="@dimen/margin_10"
        android:paddingRight="@dimen/margin_5"
        android:paddingBottom="@dimen/margin_10">

        <TextView
            android:id="@+id/signed_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Signature"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16" />

        <ImageView
            android:layout_width="30.0dip"
            android:layout_height="25.0dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_toRightOf="@+id/signed_date"
            android:src="@drawable/ic_add_signature"
            app:tint="@color/white" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="@color/white" />

    <EditText
        android:id="@+id/invoice_notes"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5"
        android:fontFamily="@font/nexa_regular"
        android:hint="Notes"
        android:minHeight="50.0dip"
        android:paddingLeft="@dimen/margin_10"
        android:textColor="@color/newAppColor"
        android:textColorHint="@color/newAppColor"
        android:textSize="@dimen/text_size_16" />
</LinearLayout>