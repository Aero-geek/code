<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_5"
    android:layout_marginTop="4dp"
    android:layout_marginRight="@dimen/margin_5"
    android:layout_marginBottom="4dp"
    android:foreground="?selectableItemBackground"
    card_view:cardCornerRadius="@dimen/margin_2"
    card_view:cardElevation="@dimen/margin_0">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selected_tab"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin_15"
        android:paddingTop="@dimen/margin_10"
        android:paddingRight="@dimen/margin_15"
        android:paddingBottom="@dimen/margin_10">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/client_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/invoice_amount"
                android:fontFamily="@font/nexa_regular"
                android:text="No client"
                android:textColor="@color/white"
                android:textSize="18.0sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/invoice_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/nexa_regular"
                android:gravity="right"
                android:text="Kes0.00"
                android:textColor="@color/white"
                android:textSize="18.0sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/invoice_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/due_date"
                android:fontFamily="@font/nexa_regular"
                android:text="INV001"
                android:textColor="@color/white"
                android:textSize="@dimen/margin_18" />

            <TextView
                android:id="@+id/due_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/nexa_regular"
                android:gravity="right"
                android:text="12/10/2017"
                android:textColor="@color/white"
                android:textSize="@dimen/margin_18" />
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>